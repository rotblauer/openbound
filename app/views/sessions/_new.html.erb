
<h2 id="signin-title"><mark>Sign in!</mark></h2>
<div id="sessions-new-form">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <p class="signin-advice"><%= link_to "Help! I forgot my password!", new_password_reset_path, style: "color: blue;" %></p>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <p class="signin-advice">This cookie is deleted when you logout.</p>
      
      <%= f.submit "Log in", class: "form-control btn btn-primary" %>
    <% end %>
</div>