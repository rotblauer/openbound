
<style>
 .two {
   margin-top: 5px;
   margin-bottom: 5px;
   padding: 5px;

   }
 .bordered {
   border-top: 2px solid #76B3DF;
   /* border-bottom: 2px solid #76B3DF; */
   /* border-left: 2px solid #76B3DF; */
   }
</style>

<div class="project-desktop-metadata-bar brand-primary background two">
  <%= @project.name %>
</div>


<div class="row">
  <div class="col-sm-3" style="padding:0px;">
      <div class="row bordered" >
        <div class="user user-card two shadowed-right">
          <%= image_tag @project.user.avatar_url(:hand), class: "img-responsive", style: "max-width: 50%;" %>
          <%= @project.user.name %>
          <%= pluralize @project.user.projects_count, "project" %>
        </div>
      </div>
      <div class="row ">
        <div class="school school-card two text-center">
          <%= image_tag @project.school.logo_url, class: "img-responsive", style: "max-width: 50%;" if @project.school.logo? %>
          <%= @project.school.Institution_Name %>
        </div>
      </div>
  </div>
  <div class="col-sm-9 " style="padding: 0px;">
    <div class="row bordered" >
     <%= render partial: "works/doc_local", locals: {work: @project.most_recent_work} %>
    </div>
  </div>
</div>
